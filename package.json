{
  "name": "mikro-orm-adapter",
  "version": "0.0.3",
  "description": "MikroORM adapter for Casbin",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "prepublish": "yarn run lint && yarn build",
    "build": "rimraf lib && tsc",
    "coverage": "jest --coverage",
    "lint": "tslint \"src/**/*.ts\"",
    "fix": "tslint \"src/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "release": "npx -p semantic-release -p @semantic-release/git -p @semantic-release/changelog semantic-release",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "@types/node": "^20.11.16",
    "coveralls": "^3.1.1",
    "dotenv": "^16.0.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "mongodb-memory-server": "^8.9.0",
    "mysql2": "^2.3.3",
    "pg": "^8.7.3",
    "rimraf": "^3.0.2",
    "ts-jest": "28.0.8",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.1.0",
    "@mikro-orm/mongodb": "^6.1.0",
    "@mikro-orm/mysql": "^6.1.0",
    "casbin": "^5.28.0"
  },
  "files": [
    "lib",
    "examples"
  ],
  "homepage": "https://casbin.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/wujingquan/mikro-orm-adapter.git"
  },
  "keywords": [
    "casbin",
    "node-casbin",
    "adapter",
    "mikro-orm",
    "MikroORM",
    "access-control",
    "authorization",
    "auth",
    "authz",
    "acl",
    "rbac",
    "abac",
    "orm"
  ],
  "author": "wujingquan",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/wujingquan/mikro-orm-adapter/issues"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "git add"
    ]
  },
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/*.test.+(ts|tsx)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
